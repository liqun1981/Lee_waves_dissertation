journal = {J. Plankton Res.},
keywords = {carbon fluxes,fronts,phytoplankton,primary,primary production,production,running header,shelf seas,spring-neap cycle,the spring-neap cycle and,tidal mixing},
number = {2},
pages = {183--197},
title = {{Potential impacts of the spring-neap tidal cycle on shelf sea primary production}},
volume = {30},
year = {2008}
}
@article{Sallee2010,
abstract = {Interactions between the atmosphere and ocean are mediated by the mixed layer at the ocean surface. The depth of this layer is determined by wind forcing and heating from the atmosphere. Variations in mixed-layer depth affect the rate of exchange between the atmosphere and deeper ocean, the capacity of the ocean to store heat and carbon and the availability of light and nutrients to support the growth of phytoplankton. However, the response of the Southern Ocean mixed layer to changes in the atmosphere is not well known. Here we analyse temperature and salinity data from Argo profiling floats to show that the Southern Annular Mode (SAM), the dominant mode of atmospheric variability in the Southern Hemisphere, leads to large-scale anomalies in mixed-layer depth that are zonally asymmetric. From a simple heat budget of the mixed layer we conclude that meridional winds associated with departures of the SAM from zonal symmetry cause anomalies in heat flux that can, in turn, explain the observed changes of mixed-layer depth and sea surface temperature. Our results suggest that changes in the SAM, including recent and projected trends attributed to human activity, drive variations in Southern Ocean mixed-layer depth, with consequences for air-sea exchange, ocean sequestration of heat and carbon, and biological productivity.},
author = {Sall{\'{e}}e, J. B. and Speer, K. G. and Rintoul, S. R.},
doi = {10.1038/ngeo812},
file = {:Users/manishdevana/Desktop/Fall 2017 Classes/Contemporary Topics/Salle et al-2010-Nature Geoscience - supplement.pdf:pdf},
isbn = {1752-0894},
issn = {17520894},
journal = {Nat. Geosci.},
number = {4},
pages = {273--279},
pmid = {16359396},
title = {{Zonally asymmetric response of the Southern Ocean mixed-layer depth to the Southern Annular Mode}},
volume = {3},
year = {2010}
}
@article{Goosse2009,
abstract = {Simulations performed with the climate model LOVECLIM, aided with\na simple data assimilation technique that forces a close matching\nof simulated and observed surface temperature variations, are able\nto reasonably reproduce the observed changes in the lower atmosphere,\nsea ice and ocean during the second half of the twentieth century.\nAlthough the simulated ice area slightly increases over the period\n1980–2000, in agreement with observations, it decreases by 0.5\n× 10 6 km 2 between early 1960s and early 1980s. No direct and reliable\nsea ice observations are available to firmly confirm this simulated\ndecrease, but it is consistent with the data used to constrain model\nevolution as well as with additional independent data in both the\natmosphere and the ocean. The simulated reduction of the ice area\nbetween the early 1960s and early 1980s is similar to the one simulated\nover that period as a response to the increase in greenhouse gas\nconcentrations in the atmosphere while the increase in ice area over\nthe last decades of the twentieth century is likely due to changes\nin atmospheric circulation. However, the exact contribution of external\nforcing and internal variability in the recent changes cannot be\nprecisely estimated from our results. Our simulations also reproduce\nthe observed oceanic subsurface warming north of the continental\nshelf of the Ross Sea and the salinity decrease on the Ross Sea continental\nshelf. Parts of those changes are likely related to the response\nof the system to the external forcing. Modifications in the wind\npattern, influencing the ice production/melting rates, also play\na role in the simulated surface salinity decrease.},
author = {Goosse, Hugues and Lefebvre, Wouter and de Montety, Anne and Crespin, Elisabeth and Orsi, Alejandro H.},
doi = {10.1007/s00382-008-0500-9},
file = {:Users/manishdevana/Desktop/Fall 2017 Classes/Contemporary Topics/Goosse et al-2009-Climate Dynamics.pdf:pdf},
isbn = {0038200805},
issn = {09307575},
journal = {Clim. Dyn.},
number = {7-8},
pages = {999--1016},
title = {{Consistent past half-century trends in the atmosphere, the sea ice and the ocean at high southern latitudes}},
volume = {33},
year = {2009}
}
@article{Dee2011a,
abstract = {ERA-Interim is the latest global atmospheric reanalysis produced by the European Centre for Medium-Range Weather Forecasts (ECMWF), covering dates from 1 January 1989. The ERA-Interim project was conducted in part to prepare for a new atmospheric reanalysis to replace ERA-40, which will extend back to the early part of the 20th century. This article describes the forecast model, data assimilation method, and input data sets used to produce ERA-Interim, and discusses the performance of the system. Special emphasis is placed on various difficulties encountered in the production of ERA- 40, including the representation of the hydrological cycle, the quality of the stratospheric circulation, and the consistency in time of the reanalysed fields. We provide evidence for substantial improvements in each of these aspects. We also identify areas where further work is needed and describe opportunities and objectives for future reanalysis projects at ECMWF. },
