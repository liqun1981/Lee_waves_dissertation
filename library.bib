isbn = {0028-0836},
issn = {0028-0836},
journal = {Nature},
number = {7237},
pages = {493--496},
pmid = {19325631},
publisher = {Nature Publishing Group},
title = {{Variable Quaternary chemical weathering fluxes and imbalances in marine geochemical budgets}},
