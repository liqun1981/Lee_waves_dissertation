file = {:Users/manishdevana/Desktop/Fall 2017 Classes/Dissertation/References/jpo-d-13-072.1.pdf:pdf},
isbn = {0022-3670\r1520-0485},
issn = {0022-3670},
journal = {J. Phys. Oceanogr.},
number = {3},
pages = {900--921},
title = {{Sensitivity of the Ocean State to Lee Wave–Driven Mixing}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/JPO-D-13-072.1},
volume = {44},
